	float venda() {
		
    int pCodigo, qtd;
    
    float lucro = 0;
    
    char a;
    
    do{
        cout <<"Informe o código do produto: ";
        
        fflush(stdout);
        
        cin >>cont;
        
        fflush(stdin);
        
        if (item[cont].quantidade < 0) {

            cout <<"Produto indisponivel\n");
            fflush(stdout);
        } else {
            cout <<"Informe a quantidade: ";
            
            fflush(stdout);
            
            cin >>qtd;
            
            fflush(stdin);
            
            cout <<"\tProduto: "<< item[cont].nome << " - \tQtdade: "<< qtd << "- \tPreço: "<< item[cont].preco << " - \tSubTotal: \t"<<item[cont].preco * qtd;
       
            fflush(stdout);
            

            lucro += item[cont].preco * qtd;
            
            item[cont].quantidade -= qtd;
        }
        cout <<"Informar novo item para a venda? (s/n) ";
        
        fflush(stdout);
        
        getline(cin,a);
        
    } while (a != 'n');


    cout <<"\t\t\t Total:" << lucro);
    
    fflush(stdout);
    
    return lucro;
    
}
	//FUNÇÃO AUMENTAR O ESTOQUE DE UM PRODUTO
	
